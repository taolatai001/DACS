@{
    ViewData["Title"] = "Tư vấn Hiến máu - Chatbot";
}

<h2>🧠 Chatbot Hỗ trợ Tư vấn</h2>

<form method="post" asp-action="Ask">
    <div class="mb-3">
        <label for="question" class="form-label">Bạn muốn hỏi gì?</label>
        <input name="question" class="form-control" required />
    </div>
    <button class="btn btn-primary">Gửi</button>
</form>

@if (ViewBag.Answer != null)
{
    <hr />
    <h5><strong>Bạn hỏi:</strong> @ViewBag.Question</h5>
    <div class="alert alert-success mt-2">
        <strong>Trả lời:</strong><br />
        @ViewBag.Answer
    </div>
}
