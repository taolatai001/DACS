@model IEnumerable<CSDL.Models.Notification>
@{
    ViewData["Title"] = "Thông báo từ hệ thống";
}

<h2 class="mt-4">🔔 Thông báo từ hệ thống</h2>

@if (Model != null && Model.Any())
{
    <ul class="list-group mt-3">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <h5 class="mb-1">@item.Title</h5> <!-- ✅ Hiển thị tiêu đề -->
                <small class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small><br />
                <p class="mb-1">@item.Message</p>

                @if (!string.IsNullOrEmpty(item.Link) && item.Link != "#")
                {
                    <a href="@item.Link" target="_blank" class="btn btn-sm btn-primary mt-2">
                        📄 Xem chi tiết
                    </a>
                }
            </li>
        }
    </ul>
}
else
{
    <div class="alert alert-info mt-3">
        Hiện tại không có thông báo nào.
    </div>
}
