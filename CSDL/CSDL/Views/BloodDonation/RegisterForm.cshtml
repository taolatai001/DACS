@model CSDL.ViewModels.BloodDonationRegisterViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Hiến Máu Nhân Đạo</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f4f6f8;
        }

        .form-wrapper {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            padding: 40px;
            max-width: 700px;
            margin: 50px auto;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 600;
            color: #e53935;
        }

        label {
            font-weight: 500;
        }

        .btn-primary {
            background-color: #e53935;
            border: none;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #c62828;
            }

        .text-danger {
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="form-wrapper">
        <h2><i class="fas fa-heartbeat"></i> Đăng ký Hiến máu</h2>

        <form asp-action="ConfirmRegistration" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="EventID" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Họ và Tên:</label>
                <input asp-for="FullName" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email:</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Số điện thoại:</label>
                <input asp-for="PhoneNumber" class="form-control" readonly />
            </div>

       

            <div class="mb-3">
                <label asp-for="BloodType" class="form-label">Nhóm máu:</label>
                @if (Model.IsBloodTypeLocked)
                {
                    <input type="text" name="BloodType" class="form-control" value="@Model.BloodType" readonly />
                }
                else
                {
                    <select name="BloodType" class="form-select">
                        <option value="">-- Chọn nhóm máu --</option>
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                        <option value="Unknown">Tôi chưa biết nhóm máu</option>
                    </select>
                }
                <span asp-validation-for="BloodType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Ảnh thẻ BHYT (JPG, PNG):</label>
                <input type="file" name="HealthInsuranceImage" class="form-control" accept=".jpg,.jpeg,.png" />
            </div>

            <div class="mb-3">
                <label class="form-label">Hồ sơ khám bệnh (PDF hoặc ảnh):</label>
                <input type="file" name="MedicalDocument" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Xác nhận Đăng ký</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
