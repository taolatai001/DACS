@model IEnumerable<CSDL.Models.BloodDonationEvent>

@{
    ViewData["Title"] = "Đăng ký Hiến máu";
}
<h2>Danh sách Sự kiện Hiến máu</h2>
<form method="get" class="mb-3 d-flex">
    <input type="text" name="search" value="@Context.Request.Query["search"]"
           placeholder="Tìm sự kiện..." class="form-control me-2" />
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sự kiện</th>
            <th>Ngày tổ chức</th>
            <th>Địa điểm</th>
            <th>Đăng ký</th> <!-- ❌ Bỏ cột "Nhóm máu" -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventName</td>
                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                <td>@item.Location</td>
                <td>
                    <!-- ✅ Thay vì submit form ngay, sẽ chuyển đến trang nhập thông tin -->
                    <a asp-action="RegisterForm" asp-route-eventId="@item.EventID" class="btn btn-primary btn-sm">
                        Đăng ký
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
