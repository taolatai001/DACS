@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml"; // đảm bảo dùng layout chính
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0 p-4 text-center" style="width: 100%; max-width: 400px;">
        <div class="mb-4">
            <i class="fas fa-user-circle fa-3x text-danger mb-3"></i>
            <h3 class="text-danger">Đăng nhập</h3>
            <p class="text-muted">Vui lòng sử dụng tài khoản Google để tiếp tục</p>
        </div>

        <a href="/Account/ExternalLogin?provider=Google" class="btn btn-outline-danger w-100">
            <i class="fab fa-google me-2"></i> Đăng nhập bằng Google
        </a>
    </div>
</div>
