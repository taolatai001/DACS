@model CSDL.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow">
        <div class="card-body">
            <h3 class="text-center text-danger mb-4"><i class="fas fa-unlock-alt"></i> Quên mật khẩu</h3>

            <form asp-action="ForgotPassword" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email đã đăng ký..." />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-danger w-100">
                    <i class="fas fa-paper-plane"></i> Gửi lại mật khẩu
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login">← Quay lại Đăng nhập</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
