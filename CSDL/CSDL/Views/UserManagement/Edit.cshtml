@model CSDL.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
    var allRoles = ViewBag.AllRoles as List<string>;
}

<h2 class="text-warning">✏️ Chỉnh sửa người dùng</h2>

<!-- ✅ Hiển thị lỗi chung -->
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Họ và Tên</label>
        <input asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Vai trò</label>
        <select asp-for="Role" asp-items="@(new SelectList(allRoles))" class="form-control">
            <option disabled selected>-- Chọn vai trò --</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">💾 Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">❌ Hủy</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
