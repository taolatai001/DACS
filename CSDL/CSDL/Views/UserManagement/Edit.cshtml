@model CSDL.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Chỉnh sửa Người dùng";
}

<h2 class="text-warning">Chỉnh sửa thông tin</h2>

@* ✅ Hiển thị lỗi chung (VD: email đã tồn tại) *@
@Html.ValidationSummary(false, "", new { @class = "text-danger" })


<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Họ và Tên</label>
        <input asp-for="FullName" class="form-control" required />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Vai trò</label>
        <select asp-for="Role" class="form-control">
            <option value="Admin">Admin</option>
            <option value="User">Người dùng</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="@Url.Action("Index", "UserManagement")" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @* ✅ Thêm đoạn này để kích hoạt validation phía client *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
