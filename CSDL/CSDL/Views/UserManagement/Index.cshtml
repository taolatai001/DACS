@model List<CSDL.Models.User>


@{
    ViewData["Title"] = "Quản lý Người dùng";
    var userRoles = ViewData["UserRoles"] as Dictionary<string, string>;
}

<h2 class="text-danger">Quản lý Người dùng</h2>
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="" />
        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Tìm</button>
    </div>
</form>


<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Quyền</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@(userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : "Người dùng")</td>
                <td>
                    <a href="@Url.Action("Edit", "UserManagement", new { id = user.Id })" class="btn btn-warning">Sửa</a>
                    <form method="post" action="@Url.Action("Delete", "UserManagement")" style="display:inline;">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
